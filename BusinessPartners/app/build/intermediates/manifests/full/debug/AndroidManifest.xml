<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sap.epm"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <!-- allow connections to Internet Services. -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sap.epm.app.CentralActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.sap.epm.app.BusinessPartnerActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.sap.epm.app.BusinessPartnerListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.sap.epm.app.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sap.epm.app.SalesOrderListActivity"
            android:label="@string/title_activity_sales_order" >
        </activity>
        <activity
            android:name="com.sap.epm.app.SalesOrderItemsListActivity"
            android:label="@string/title_activity_sales_order_items_list" >
        </activity>
    </application>

</manifest>